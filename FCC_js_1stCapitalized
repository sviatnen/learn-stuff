function titleCase(str) {
  
 var Arr=str.toLowerCase().split(' ');
 var Arr2=[];
 var str2="";
  
 for (i=0; i<Arr.length; i++){
      Arr2[i] = Arr[i].substring(0,1).toUpperCase() + Arr[i].substring(1,Arr[i].length);
}
  
 str2=Arr2.join(" ");  
  
  
  return str2;
}

titleCase("HERE IS MY HANDLE HERE IS MY SPOUT");
